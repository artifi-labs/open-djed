generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Actions {
  Mint
  Burn
}

enum Token {
  DJED
  SHEN
  BOTH
}

model Order {
  id        Int      @id @default(autoincrement())
  address   String // user address
  tx_hash   String   @unique // hash of tx
  block     String?
  action    Actions
  token     Token
  orderDate DateTime @default(now())
  paid      BigInt? // ADA value paid for this action
  fees      BigInt?
  received  BigInt? // token value received
  status    String? // Created -> still to be consumed; Completed -> already consumed
}
