generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Actions {
  Mint
  Burn
}

enum Token {
  DJED
  SHEN
  BOTH
}

enum TokenMarketCap {
  DJED
  SHEN
}

enum AllTokens {
  DJED
  SHEN
  ADA
}

model Order {
  id        Int      @id @default(autoincrement())
  address   Json // user address, stores paymentKeyHash and stakeKeyHash
  tx_hash   String   @unique // hash of tx
  out_index Int // output index
  block     String // block hash
  slot      BigInt // block slot
  action    Actions
  token     Token
  orderDate DateTime @default(now())
  paid      BigInt? // ADA value paid for this action
  fees      BigInt?
  received  BigInt? // token value received
  status    String? // Created -> still to be consumed; Completed -> already consumed

  @@index([slot], name: "idx_order_slot") // index makes lookups much faster
}

model Block {
  id          Int      @id @default(1) // only one row
  latestBlock String   @unique // hash of the latest block synced
  latestSlot  BigInt // slot of the latest block synced
  updatedAt   DateTime @updatedAt @db.Timestamptz(6)
}

model ReserveRatio {
  id           Int      @id @default(autoincrement())
  timestamp    DateTime @unique @db.Date
  reserveRatio Decimal // Stored as ratio (e.g. 300% => 3.0)
  block        String // block hash
  slot         BigInt // block slot
}

model MarketCap {
  id        Int            @id @default(autoincrement())
  timestamp DateTime       @db.Date
  token     TokenMarketCap
  usdValue  Decimal
  adaValue  Decimal
  block     String // block hash
  slot      BigInt // block slot

  @@unique([token, timestamp])
}

model TokenPrice {
  id        Int       @id @default(autoincrement())
  timestamp DateTime  @db.Date
  token     AllTokens
  usdValue  Decimal
  adaValue  Decimal
  block     String // block hash
  slot      BigInt // block slot

  @@unique([token, timestamp])
}

model ADAStakingRewards {
  id             Int      @id @default(autoincrement())
  epoch          Int      @unique
  startTimestamp DateTime @unique @db.Date
  endTimestamp   DateTime @unique @db.Date
  rate           Decimal // Staking rewards rate by epoch
  block          String
  slot           BigInt
}
